<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_new_restaurant"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="foodnow.foodnow.Activities.Screens.AddNewRestaurant">


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Restaurant Name"
        android:layout_alignParentTop="true"
        android:id="@+id/addrestaurant_name"
        android:background="@drawable/border"
        android:layout_margin="5dp"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Restaurant Phone"
        android:layout_alignParentTop="true"
        android:id="@+id/addrestaurant_phone"
        android:background="@drawable/border"
        android:layout_margin="5dp"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Restaurant Cuisine"
        android:layout_alignParentTop="true"
        android:id="@+id/addrestaurant_cuisine"
        android:background="@drawable/border"
        android:layout_margin="5dp"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Restaurant Address"
        android:layout_alignParentTop="true"
        android:id="@+id/addrestaurant_address"
        android:background="@drawable/border"
        android:layout_margin="5dp"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Restaurant Latitude"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:id="@+id/addrestaurant_latitude"
        android:background="@drawable/border"
        android:layout_margin="5dp"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Restaurant Longitude"
        android:layout_alignParentTop="true"
        android:id="@+id/addrestaurant_longitude"
        android:background="@drawable/border"
        android:layout_margin="5dp"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Add/Update Restaurant"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/addNewRestaurant"
        android:background="@color/colorPrimary"
        android:textColor="@color/cardview_light_background" />
</LinearLayout>
